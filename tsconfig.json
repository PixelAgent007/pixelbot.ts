{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "build",
    "strict": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["src/*/*sample.ts"]
}
